{
  "lwc": { 
    "modules": [{ "dir": "$rootDir/src/modules" }] 
  },
  "routes": [
    {
      "id": "example",
      "path": "/",
      "rootComponent": "example/app"
    }
  ],
  "assets": [
    {
      "alias": "assetsDir",
      "dir": "$rootDir/src/assets",
      "urlPath": "./assets"  
    },
    {
      "alias": "favicon",
      "file": "$rootDir/src/assets/favicon.ico",
      "urlPath": "./favicon.ico" 
    }
  ],
  "lwr": {
    "outputDir": "site",
    "basePath": "./"
  }
}
